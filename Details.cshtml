@model DailyBlogger.Models.BlogPost
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>
    <h2>@Model.blogTitle</h2>
    <p>@Model.content</p>
    <p><a asp-action="Edit" asp-route-id="@Model.id">Edit this Post</a></p>
    <p><a asp-action="Delete" asp-route-id="@Model.id">Delete this Post</a></p>
</body>
</html>

<style>
    body {
        background-color: lightgreen;
    }

    h1 {
        color: white;
        text-align: center;
    }

    h2 {
        text-align: center;
    }

    p {
        text-align: center;
    }

    a {
        text-decoration: none;
    }
</style>