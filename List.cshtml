@model IEnumerable<DailyBlogger.Models.BlogPost>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog Posts</title>
</head>
<body>
    <p>

    </p>
    @foreach (var item in Model)
    {
        <div>
            <a asp-controller="Blog" asp-action="Details" asp-route-id=@item.id> @Html.DisplayFor(m => item.blogTitle) </a>
            <p>@Html.DisplayFor(m => item.blogDate) </p>
        </div>
    }

</body>
</html>


<style>
    body {
        background-color: lightblue;
        text-align: center;
    }
    h1 {
        color: white;
        text-align: center;
    }
    a {
        text-decoration: none;
        text-align: center; 
    }
    title {
        text-align: center;
    }
    p {
        text-align:center;
    }
</style>
